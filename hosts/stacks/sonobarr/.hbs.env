secret_key={{{SECRET_SECRET_KEY}}}

# Lidarr configuration
lidarr_address=https://{{{domainForApp "lidarr" hostname="servarr"}}}
lidarr_api_key={{{SECRET_LIDARR_API_KEY}}}
root_folder_path=/data/music
quality_profile_id=1
metadata_profile_id=1
lidarr_api_timeout=120
fallback_to_top_result=false
search_for_missing_albums=false
dry_run_adding_to_lidarr=false

# Discovery tuning
similar_artist_batch_size=10
auto_start=false
auto_start_delay=60

# External APIs
last_fm_api_key={{{SECRET_LASTFM_API_KEY}}}
last_fm_api_secret={{{SECRET_LASTFM_API_SECRET}}}
youtube_api_key=
openai_api_key=
openai_model=gpt-4o-mini
openai_max_seed_artists=5

# Super-admin bootstrap (used on first launch)
sonobarr_superadmin_username=akmin
sonobarr_superadmin_password={{{SECRET_SUPERADMIN_PASSWORD}}}
sonobarr_superadmin_display_name=Super Admin
sonobarr_superadmin_reset=false