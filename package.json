{
  "name": "hac",
  "main": "index.ts",
  "scripts": {
    "check": "pnpm exec prettier --check .",
    "format": "pnpm exec prettier --write .",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint --fix .",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "@hanseltime/pulumi-file-utils": "1.2.0",
    "@muhlba91/pulumi-proxmoxve": "^7.11.0",
    "@pulumi/ansible": "file:sdks/ansible",
    "@pulumi/command": "^1.1.3",
    "@pulumi/porkbun": "file:sdks/porkbun",
    "@pulumi/pulumi": "^3.216.0",
    "handlebars": "^4.7.8",
    "smol-toml": "^1.6.0",
    "ts-node": "^10.9.2",
    "type-fest": "^5.4.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.9",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "prettier": {
    "experimentalTernaries": true,
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "objectWrap": "collapse",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        256
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "deploy",
          "destroy",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "task",
          "test"
        ]
      ]
    }
  }
}
