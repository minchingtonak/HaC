{
  "name": "hac",
  "main": "index.ts",
  "scripts": {
    "check": "pnpm exec prettier --check .",
    "format": "pnpm exec prettier --write .",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint --fix .",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "@hanseltime/pulumi-file-utils": "1.2.0",
    "@muhlba91/pulumi-proxmoxve": "^7.11.0",
    "@pulumi/ansible": "file:sdks/ansible",
    "@pulumi/command": "^1.1.3",
    "@pulumi/porkbun": "file:sdks/porkbun",
    "@pulumi/pulumi": "^3.212.0",
    "handlebars": "^4.7.8",
    "smol-toml": "^1.5.2",
    "ts-node": "^10.9.2",
    "type-fest": "^5.3.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "prettier": {
    "experimentalTernaries": true,
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "objectWrap": "collapse",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        256
      ]
    }
  }
}
